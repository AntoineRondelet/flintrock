def normalize_keys(obj):
    """
    Used to map keys from config files to Python parameter names.
    """
    if type(obj) != dict:
        return obj
    else:
        return { k.replace('-', '_'): normalize_keys(v) for k,v in obj.items() }


if __name__ == "__main__":
    start = datetime.now().replace(microsecond=0)

    with open("config.yaml") as f:
        config = normalize_keys(yaml.safe_load(f))

    spark = Spark(version=config['modules']['spark']['version'])
    provider = config['default_provider']

    modules = [spark]

    launch(
        provider=provider,
        cluster_name="flintrock-test",
        num_slaves=2,
        modules=modules,
        provider_options=config['providers'][provider])

    end = datetime.now().replace(microsecond=0)
    print("Finished in {t}.".format(t=(end - start)))
